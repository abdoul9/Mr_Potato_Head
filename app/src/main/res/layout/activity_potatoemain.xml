<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.abdou.potatoemyapplication.POTATOEMainActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#000"
            android:text="Mr. Potato Head" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/arms"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/arms"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp" />

        <ImageView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/body"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp" />

        <ImageView
            android:id="@+id/ears"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/ears"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp" />

        <ImageView
            android:id="@+id/eyebrows"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyebrows"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp" />

        <ImageView
            android:id="@+id/eyes"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyes"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp" />

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/glasses"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp" />

        <ImageView
            android:id="@+id/hat"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/hat"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp" />

        <ImageView
            android:id="@+id/mouth"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/mouth"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp" />

        <ImageView
            android:id="@+id/mustache"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/mustache"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp" />

        <ImageView
            android:id="@+id/nose"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/nose"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/shoes"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="45dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/ARMScheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkClicked"
                android:text="Arms"
                tools:text="Arms" />

            <CheckBox
                android:id="@+id/EARScheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkClicked"
                android:text="Ears"
                tools:text="Ears" />

            <CheckBox
                android:id="@+id/EYEBROWScheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkClicked"
                android:text="Eyebrows"
                tools:text="Eyebrows" />

            <CheckBox
                android:id="@+id/EYEScheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkClicked"
                android:text="Eyes"
                tools:text="Eyes" />

            <CheckBox
                android:id="@+id/GLASSEScheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkClicked"
                android:text="Glasses"
                tools:text="Glasses" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="45dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/HATcheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkClicked"
                android:text="Hat"
                tools:text="Hat" />

            <CheckBox
                android:id="@+id/MOUTHcheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkClicked"
                android:text="Mouth"
                tools:text="Mouth" />

            <CheckBox
                android:id="@+id/MUSTACHEcheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkClicked"
                android:text="Mustache"
                tools:text="Mustache" />

            <CheckBox
                android:id="@+id/NOSEcheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkClicked"
                android:text="Nose"
                tools:text="Nose" />

            <CheckBox
                android:id="@+id/SHOEScheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkClicked"
                android:text="Shoes"
                tools:text="Shoes" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
